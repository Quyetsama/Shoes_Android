<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners_cart"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center">

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/code_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order #NPOK8T"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/quantity_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:text="Quantity: 3"/>

            <TextView
                android:id="@+id/total_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Price: $500"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/time_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15/11/2020"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="bottom|right">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/details_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_1"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="12dp"
                    android:text="Details"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_gravity="right|bottom"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>