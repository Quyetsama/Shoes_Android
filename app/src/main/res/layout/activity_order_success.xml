<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderSuccessActivity">

    <include android:id="@+id/toolbar" layout="@layout/toolbar_1" />

    <ImageView
        android:id="@+id/image_success"
        android:layout_below="@+id/toolbar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_below="@+id/image_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary"/>

    <include layout="@layout/button_1" />

</RelativeLayout>